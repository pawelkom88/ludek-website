---
import ContactForm from "@/components/contact-form/ContactForm";
import Events from "@/components/events/Events";
import MainGrid from "@/components/main-grid/MainGrid";
import Partners from "@/components/partners/Partners";
import Layout from "@/layouts/Layout";

const { lang } = Astro.params;

const englishData = {
  title: "Ludek",
  description: "Ludek",
};

const polishData = {
  title: "Ludek",
  description: "Ludek",
};

const data = {
  pl: polishData,
  en: englishData,
};

type Locale = keyof typeof data;
---

<Layout
  title={data[lang as Locale].title}
  description={data[lang as Locale].description}
  image=""
  jsonLDType="website"
>
  <MainGrid lang={lang} />
  <br />
  <Events lang={lang} />
  <br />
  <Partners />
  <br />
  <ContactForm />
  <br />
</Layout>
